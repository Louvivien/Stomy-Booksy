<main>
    <header class="header-account-page bg-gradient-primary d-flex align-items-end" style="height:250px">
        <div class="container">
            <div class="row">
                <div class=" col-lg-12">
                    <!-- Salute + Small stats -->
                    <div class="row align-items-center mb-4">
                        <div class="col-md-5 mb-4 mb-md-0">

                            <% if current_establishment %>
                            <span class="h2 mb-0 text-white d-block">Bonjour <%= @establishment.name %></span>
                            <% elsif current_teacher %>
                            <span class="h2 mb-0 text-white d-block">Bonjour <%= @teacher.first_name %></span>
                            <% elsif current_student %>
                            <span class="h2 mb-0 text-white d-block">Bonjour <%= @student.first_name %></span>
                            <% end %>
                            <span class="text-light">Have a nice day!</span>
                        </div>
                    </div>
                    <!-- Account navigation -->
                    <div class="d-flex">
                        <a href="<%= current_user %>" class="btn btn-icon btn-group-nav shadow btn-secondary">
                            <span class="btn-inner--icon"><i class="fas fa-user"></i></span>
                            <span class="btn-inner--text d-none d-md-inline-block">Retour à mon profil</span>
                        </a>
                        <div class="btn-group btn-group-nav shadow ml-auto" role="group" aria-label="Basic example">
                            <div class="btn-group" role="group">
                                <button id="btn-group-boards" type="button" class="btn btn-secondary btn-icon">
                                    <span class="btn-inner--icon"><i class="fas fa-chart-line"></i></span>
                                    <span class="btn-inner--text d-none d-sm-inline-block">Accès à mon dashboard</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section class="slice">
        <div class="container">
            <div class="row row-grid">
                <div class="col-lg-3">

                    <div data-toggle="sticky" data-sticky-offset="100" data-negative-margin=".card-profile-cover">

                        <div class="card">
                            <div class="card-header py-3">
                                <span class="h6">Settings</span>
                            </div>
                            <div class="list-group list-group-sm list-group-flush">
                                <a href="account-profile.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                    <div>
                                        <i class="fas fa-user-circle mr-2"></i>
                                        <span>Profile</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-angle-right"></i>
                                    </div>
                                </a>
                                <a href="account-settings.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                    <div>
                                        <i class="fas fa-cog mr-2"></i>
                                        <span>Settings</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-angle-right"></i>
                                    </div>
                                </a>
                                <a href="account-billing.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                    <div>
                                        <i class="fas fa-credit-card mr-2"></i>
                                        <span>Billing</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-angle-right"></i>
                                    </div>
                                </a>
                                <a href="account-notifications.html" class="list-group-item list-group-item-action d-flex justify-content-between">
                                    <div>
                                        <i class="fas fa-bell mr-2"></i>
                                        <span>Notifications</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-angle-right"></i>
                                    </div>
                                </a>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="col-lg-9">

                    <div>
                        <!-- General -->

                        <div class="page-inner-header mb-4">
                            <h5 class="mb-1">Information générales</h5>

                            <p class="text-muted mb-0">Plus vous serez précis, plus les utilisateurs auront envie d'échanger avec vous.</p>

                        </div>
                        
                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                        <%= devise_error_messages! %>

                        <!-- Première ligne -->

                        <div class="row">
                        
                            <% if resource.class.name == "Establishment" %>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="form-control-label">Raison Sociale</label>
                                    <%= f.text_field :name, class: "form-control form-control-label", autofocus: true, value: "#{@establishment.name}" %>
                                </div>
                            </div>
                        
                            <% elsif resource.class.name == "Student" || resource.class.name == "Teacher" %>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Prénom</label>
                                    <%= f.text_field :first_name, class: "form-control form-control-label", autofocus: true, placeholder: "#{current_user.first_name}" %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Nom</label>
                                    <%= f.text_field :last_name, class: "form-control form-control-label", autofocus: true, placeholder: "#{current_user.last_name}" %>
                                </div>
                            </div>

                            <% end %>
                        </div>
                                                    
                        <!-- Deuxième ligne -->


                        <div class="row">

                            <% if resource.class.name == "Establishment" || resource.class.name == "Teacher" %>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">SIRET</label>
                                        <%= f.text_field :siret, class: "form-control form-control-label", value: "#{current_user.siret}" %>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">    

                                    <label class="form-control-label">Email</label>
                                    <%= f.email_field :email, class: "form-control form-control-label", autocomplete: "email", value: "#{current_user.email}" %>
                                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                    <% end %>
                                </div>
                            </div>

                            <% elsif resource.class.name == "Student" %>

                            <div class="col-md-12">
                                <div class="form-group">    

                                    <label class="form-control-label">Email</label>
                                    <%= f.email_field :email, class: "form-control form-control-label", autocomplete: "email", value: "#{current_user.email}" %>
                                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                                    <% end %>
                                </div>
                            </div>

                            <% end %>

                        </div>

                        <!-- Troisième ligne -->

                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">Téléphone</label>
                                    <%= f.text_field :phone, class: "form-control form-control-label", value: "#{current_user.phone}" %>
                                </div>
                            </div>
                        </div>

                        <% if get_user_type == "Teacher" || get_user_type == "Establishment" %>
                        <!-- Address -->
                        <div class="pt-5 mt-5 delimiter-top">

                            <div class="page-inner-header mb-4">
                                <h5 class="mb-1">Changer votre adresse</h5>

                                <p class="text-muted mb-0">Une fois cette adresse changée, votre position sur la Map sera changée.</p>

                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label class="form-control-label">Nouvelle adresse</label>
                                        <input class="form-control" type="text" value="<%= current_user.address %>">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Description -->

                        <div class="pt-5 mt-5 delimiter-top">

                            <div class="page-inner-header mb-4">
                                <h5 class="mb-1">Changez votre description</h5>

                                <p class="text-muted mb-0">Dites en quoi vous vous démarquez.</p>

                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="form-control-label">Description</label>
                                            <%= f.text_field :description, class: "form-control form-control-label" %>
                                            <small class="form-text text-muted mt-2">You can @mention other users and organizations to link to them.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% end %>


                        <!-- Change Password -->

                        <div class="pt-5 mt-5 delimiter-top">

                            <div class="page-inner-header mb-4">
                                <h5 class="mb-1">Changez votre mot-de-passe </h5>

                                <p class="text-muted mb-0">Nouveau mot de passe</p>

                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <%= f.password_field :password_confirmation, class: "form-control", id: "input-password-confirm", autocomplete: "new-password", placeholder: "********" %>
                                            <small class="form-text text-muted mt-2">Laissez la case vide si vous ne voulez pas le changer.</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>


                        
                        <!-- Skills -->
                        <div class="pt-5 mt-5 delimiter-top">

                            <div class="page-inner-header mb-4">
                                <h5 class="mb-1">Étape de confirmation</h5>

                                <p class="text-muted mb-0">Confirmez les changements opérés en renseignant votre mot de passe actuel </p>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                        <label class="sr-only"></label>
                                        <%= f.password_field :current_password, class: "form-control", id: "input-password-confirm", autocomplete: "current-password", placeholder: "********" %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div>

                            <!-- A rajouter car ça marche pas sa mère -->
                            <% if false %>
                            <div class="d-flex justify-content-center pt-5">
                                <%= button_to "Supprimer mon compte", registration_path(resource_name), class: "btn btn-danger btn-icon-label", data: { confirm: "Are you sure?" }, method: :delete %>
                            </div>
                            <!-- A rajouter car ça marche pas sa mère -->

                            <% end %>
                            <div class="pt-5 mt-5 delimiter-top d-flex justify-content-between">
                                <%= f.submit "Sauvegarder les changements", class: "btn btn-primary btn-icon actions" %>
                                <%= link_to "Retour", current_user, class: "btn btn-link" %>
                            </div>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to action -->

    <section class="slice slice-lg bg-primary">

        <span class="tongue tongue-top"><i class="fas fa-angle-up"></i></span>

        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-lg-8 text-center">
                    <h3 class="font-weight-400 text-white">I am ready to start a new project with <span class="font-weight-700">Purpose</span> UI Kit.</h3>
                    <div class="mt-5">
                        <a href="https://themes.getbootstrap.com/product/purpose-website-ui-kit/" target="_blank" class="btn btn-white btn-circle btn-translate--hover px-4">Purchase now<span class="badge badge-pill badge-danger text-sm">$49 USD</span></a>
                        <a href="mailto:support@webpixels.io" class="btn btn-link text-white">Have an issue?</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

