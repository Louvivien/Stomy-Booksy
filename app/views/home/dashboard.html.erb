                        </div>
                        <div class="col-4">
                            <div class="card-icon-actions text-right">
                                <a href="#" class="favorite active" data-toggle="tooltip" data-original-title="Save to favorites"><i class="fas fa-pen"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
              </div>

              <!-- floating menu -->
              <div data-toggle="sticky" data-sticky-offset="100">
                  <div class="card">

                  <div class="card-header border-0">
                      <div class="d-flex justify-content-between align-items-center">
                          <div>
                              <h6 class="mb-0">Dashboard</h6>
                          </div>
                      </div>
                  </div>

                    <div class="list-group list-group-sm list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <div>
                                <%= image_tag "img/icons/dusk/svg/add.svg", alt: "float menu icon", class: "avatar" %>
                            </div>
                            <div class="flex-fill pl-3 text-limit">
                                <h6 class="text-sm d-block text-limit">Ressources</h6>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <div>
                                <%= image_tag "img/icons/dusk/svg/open-in-browser.svg", alt: "float menu icon", class: "avatar" %>
                            </div>
                            <div class="flex-fill pl-3 text-limit">
                                <h6 class="text-sm d-block text-limit">Services</h6>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <div>
                                <%= image_tag "img/icons/dusk/svg/expired.svg", alt: "float menu icon", class: "avatar" %>
                            </div>
                            <div class="flex-fill pl-3 text-limit">
                                <h6 class="text-sm d-block">Horaires</h6>
                            </div>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex align-items-center justify-content-between">
                            <div>
                                <%= image_tag "img/icons/dusk/svg/maintenance.svg", alt: "float menu icon", class: "avatar" %>
                            </div>
                            <div class="flex-fill pl-3 text-limit">
                                <h6 class="text-sm d-block text-limit">Paramètres</h6>
                            </div>
                        </a>
                    </div>
                </div>

            </div>
        </div>



      <div class="card col-9">

            <div class="card-header border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-0">Liste des ressources</h6>
                    </div>
                    <div class="text-right">
                        <div class="actions">
                            <a href="#" class="action-item"><i class="fas fa-plus"></i></a>
                            <a href="#" class="action-item"><i class="fas fa-sync"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- resource creation form -->
            <table class="table table-hover align-items-center">
                <thead class="thead-light">
                    <th> Type </th>
                    <th> Nom </th>
                    <th> Description </th>
                    <th> Disponible ? </th>
                  </thead>
                <%= form_for @resource do |form| %>
                  <input type="hidden" id="hidden_tag" name="resource[establishment_id]" value="<%=current_user.id%>">
                  <td><%=form.select :resource_type, [["salle","salle"],["objet","objet"]], {}, {class: "form-control", style: "width: 100px"}%></td>
                  <td><%=form.text_field :name, class:"form-control border-1", placeholder: "Bleue" %></td>
                  <td><%=form.text_field :description, class:"form-control border-1", placeholder: "Danse"%></td>
                  <td><%=form.select :is_active, [["active",true],["inactive",false]], {}, {class: "form-control", style: "width: 100px"}%></td>
                  <td><%=form.submit "Créer ressource", class:"btn btn-sm btn-primary"%></td>
                <% end %>
            </table>

            <hr>

            <!-- resources list (table) -->
            <div class="table-responsive">
                <table class="table table-sm table-flush align-items-center align-items-center">
                    <thead>
                        <tr>
                            <th> Id </th>
                            <th> Type </th>
                            <th> Nom </th>
                            <th> Description </th>
                            <th> Disponible </th>
                            <th><i class="fas fa-trash-alt"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    <%@resources.each do |resource|%>
                      <tr>
                          <td><span class="font-weight-bold text-sm"><%=resource.id%></span></td>
                          <td><span class="badge badge-dot mr-4"><%=resource.resource_type%></span></td>
                          <td><span class="text-sm"><%=resource.name%></span></td>
                          <td><span class="text-sm"><%=resource.description%></span></td>
                          <td><span class="text-sm"><%=resource.is_active%></span></td>
                          <td><a href="<%= resource_path(resource) %>" class="text-light" data-toggle="tooltip" data-original-title="Remove item" data-method="DELETE" data-confirm="Are you sure?" >
                            <i class="fas fa-trash-alt"></i></a></td>
                      </tr>
                    <%end%>
                </table>
            </div>

          </div>
      </div>
  </div>
