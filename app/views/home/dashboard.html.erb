<section class="slice bg-secondary" style="margin-top: -2.5em !important" id="dash">
    <div class="container">
    <h1>TEST</h1>

        <!-- establishment name card -->
        <div class="row row-grid">
            <div class="col-lg-3">
              <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
