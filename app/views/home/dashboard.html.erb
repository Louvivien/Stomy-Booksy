
<h1 style="margin-top: 80px;">Ceci est le dashboard d'un <%=@user_type%> </h1>

<h2>Liste des RDV</h2>

<h2>Argent</h2>
<h2>Ressources</h2>
  <table class="table table-striped">
    <thead class="thead-dark">
      <th> Id </th>
      <th> type </th>
      <th> Name </th>
      <th> Description </th>
      <th> Active ? </th>
      <th> Delete </th>
    </thead>
    <%@resources.each do |resource|%>
      <tr>
        <td><%=resource.id%></td>
        <td><%=resource.resource_type%></td>
        <td><%=resource.name%></td>
        <td><%=resource.description%></td>
        <td><%=resource.is_active%></td>
        <td> 
          <a href="<%= item_cart_path(@cart, item) %>" class="text-light" data-toggle="tooltip" data-original-title="Remove item" data-method="DELETE" data-confirm="Are you sure?" >
            <i class="fas fa-trash-alt"></i>
          </a>
        </td>
      </tr>
    <%end%>
  </table>
<p style="min-height: 300px;"></p>