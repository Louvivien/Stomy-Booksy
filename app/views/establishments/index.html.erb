  <header class="slice pt-lg pb-5 bg-gradient-primary d-flex align-items-end">
      <div class="container pt-sm">
          <div class="row">
              <div class=" col-lg-12">
                  <div class="row align-items-center mb-4">
                      <div class="col-lg-8">
                          <span class="h2 mb-0 text-white d-block">Vos activités à portée de clics.</span>
                          <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Choisissez un service via un établissement / un professeur</a>
                              </li>
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Sélectionnez sur un créneau, et voilà !</a>
                              </li>
                          </ol>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <div class="shape-container" data-shape-style="wavify" data-shape-position="bottom">
          <svg width="100%" height="100%" version="1.1" xmlns="http://www.w3.org/2000/svg" class="shape-fill-white" data-toggle="wavify">
              <defs></defs>
              <path d="" class="shape-fill-white" />
          </svg>
      </div>
  </header>

  <div class="container">
    <%if @teacher%>
      <h4 class="text-center">Voici les <%=@establishments.count%> établissements auxquels <a href="<%=teacher_path(@teacher)%>">"<%=@teacher.first_name%> <%=@teacher.last_name%>"</a>est affilié(e)</h4>
    <%else%>
      <h4 class="text-center">Liste de l'ensemble de nos établissements</h4>
    <%end%>
    <div class="row">
      <% @establishments.each do |establishment| %>
        <div class="col-lg-4 pt-3 mt-3 nf-item spacing-grid">
          <div class="card">
            <div class="card-header py-4">
              <div class="d-flex align-items-center">
                <div class="avatar-content">
                  <a href="<%=establishment_path(establishment)%>">
                    <h5 class="h6 mb-0"><%= establishment.name %></h5>
                  </a>
                  <small class="d-block text-muted"><%=establishment.address%></small>    
                </div>
              </div>
            </div>
            <div class="card-image">
              <% if establishment.avatar.attached? %>
                <a href="<%=establishment_path(establishment)%>">
                <%= image_tag establishment.avatar, style: "width:100%" %>
                </a>
              <% else %>
              <a href="<%=establishment_path(establishment)%>">
                <%= image_tag ("assos.jpg"), :style => "width:348px;" %>
              </a>
              <% end %>
            </div>

            <div class="card-body">
                <p class="card-text"><%= establishment.description %></p>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center ">
                  <a href="<%=establishment_teachers_path(establishment)%>">
                    <button class="btn btn-sm btn-success btn-circle btn-icon">
                      <span class="btn-inner--text">Voir nos professeurs (<%=establishment.teachers.count%>)</span>
                      <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
                    </button>
                  </a>
                </div>
                <div class="d-flex justify-content-center my-2">
                  <a href="<%=establishment_services_path(establishment)%>">
                    <button class="btn btn-sm btn-info btn-circle btn-icon">
                      <span class="btn-inner--text">Voir nos services (<%=establishment.services.count%>)</span>
                      <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
                    </button>
                  </a>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
  </div>



