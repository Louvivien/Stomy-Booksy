  <header class="slice pt-lg pb-5 bg-gradient-primary d-flex align-items-end">
      <div class="container pt-lg">
          <div class="row">
              <div class=" col-lg-12">
                  <div class="row align-items-center mb-4">
                      <div class="col-lg-8 mb-4 mb-lg-0">
                          <span class="h2 mb-0 text-white d-block">Vos activités à portée de clics.</span>
                          <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Choisissez votre établissement</a>
                              </li>
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Votre professeur</a>
                              </li>
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Cliquez sur un créneau, et voilà !</a>
                              </li>
                          </ol>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <div class="shape-container" data-shape-style="wavify" data-shape-position="bottom">
          <svg width="100%" height="100%" version="1.1" xmlns="http://www.w3.org/2000/svg" class="shape-fill-white" data-toggle="wavify">
              <defs></defs>
              <path d="" class="shape-fill-white" />
          </svg>
      </div>
  </header>

  <div class="container">
    <div class="row">
      <% @establishments.each do |establishment| %>
        <div class="col-lg-4 pt-3 mt-3 nf-item spacing-grid">
            <div class="card">
                <div class="card-header py-4">
                    <div class="d-flex align-items-center">
                        <span class="avatar avatar-sm bg-purple">JD</span>
                        <div class="avatar-content">
                            <h5 class="h6 mb-0"><%= establishment.name %></h5>
                            <small class="d-block text-muted"><%=establishment.address%></small>    
                        </div>
                    </div>
                </div>
                <div class="card-image">
                  <%= image_tag ("assos.jpg"), :style => "width:348px;" %>
                </div>
                <div class="card-body">
                    <div class="row mb-1">
                        <div class="col">
                            <div class="card-icon-actions card-icon-actions-lg">
                                <a href="" class="love active"><i class="fas fa-heart"></i></a>
                                <a href=""><i class="fas fa-comment"></i></a>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card-icon-actions card-icon-actions-lg text-right">
                                <a href=""><i class="fas fa-bookmark"></i></a>
                            </div>
                        </div>
                    </div>
                    <div>
                      <h6 class="heading h6 mb-3"><%= establishment.teachers.count %> professeurs</h6>
                    </div>
                    <p class="card-text"><%= establishment.description %></p>
                </div>
                <div class="card-footer">
                    <div class="row ">
                        <div class="col-10">
                            <form class="card-comment-box">
                                <p class="card-text text-muted"></p>
                            </form>
                        </div>
                        <div class="col-2 text-right">
                            <div class="card-icon-actions card-icon-actions-lg">
                                <a href="#" data-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-ellipsis-h"></i>
                                </a>
                                <div class="dropdown-menu py-3 text-align-left">
                                    <%= link_to 'Se reseigner sur l\'école', establishment_path(establishment), class:"dropdown-item" %>
                                    <%= link_to 'Voir les profs', establishment_teachers_index_path(establishment), class:"dropdown-item" %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-12 text-center mt-3 mb-4">
    <%= link_to "Retour à l'accueil", root_path, class:"btn btn-warning" %>
    </div>
  </div>



