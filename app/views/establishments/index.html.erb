  <header class="slice pt-lg pb-5 bg-gradient-primary d-flex align-items-end">
      <div class="container pt-sm">
          <div class="row">
              <div class=" col-lg-12">
                  <div class="row align-items-center mb-4">
                      <div class="col-lg-8">
                          <span class="h2 mb-0 text-white d-block">Vos activités à portée de clics.</span>
                          <ol class="breadcrumb breadcrumb-links breadcrumb-dark">
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Choisissez votre établissement et votre professeur</a>
                              </li>
                              <li class="breadcrumb-item">
                                  <a href="#" class="text-normal">Sélectionnez sur un créneau, et voilà !</a>
                              </li>
                          </ol>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <div class="shape-container" data-shape-style="wavify" data-shape-position="bottom">
          <svg width="100%" height="100%" version="1.1" xmlns="http://www.w3.org/2000/svg" class="shape-fill-white" data-toggle="wavify">
              <defs></defs>
              <path d="" class="shape-fill-white" />
          </svg>
      </div>
  </header>

  <div class="container">
    <%if @teacher%>
      <h4 class="text-center">Voici les <%=@establishments.count%> établissements auxquels <a href="<%=teacher_path(@teacher)%>">"<%=@teacher.first_name%>"</a>est affilié(e)</h4>
    <%else%>
      <h4 class="text-center">Liste de l'ensemble de nos établissements</h4>
    <%end%>
    <div class="row">
      <% @establishments.each do |establishment| %>
        <div class="col-lg-4 pt-3 mt-3 nf-item spacing-grid">
          <div class="card">
            <div class="card-header py-4">
              <div class="d-flex align-items-center">
                <div class="avatar-content">
                  <a href="<%=establishment_path(establishment)%>">
                    <h5 class="h6 mb-0"><%= establishment.name %></h5>
                  </a>
                  <small class="d-block text-muted"><%=establishment.address%></small>    
                </div>
              </div>
            </div>
            <div class="card-image">
              <a href="<%=establishment_path(establishment)%>">
                <%= image_tag ("assos.jpg"), :style => "width:348px;" %>
              </a>
            </div>

            <div class="card-body">
                <div class="row mb-1">
                    <div class="col">
                        <div class="card-icon-actions card-icon-actions-lg">
                            <a href="#" class="love active"><i class="fas fa-heart"></i></a>
                            <a href="#"><i class="fas fa-comment"></i></a>
                        </div>
                    </div>
                    <div class="col">
                        <div class="card-icon-actions card-icon-actions-lg text-right">
                            <a href="#"><i class="fas fa-bookmark"></i></a>
                        </div>
                    </div>
                </div>
                <div>
                  <h6 class="heading h6 mb-3"><%= establishment.teachers.count %> professeurs actuellement inscrits</h6>
                </div>
                <p class="card-text"><%= establishment.description %></p>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center ">
                  <%if @teacher%>
                    <a href="<%=resource_teacher_events_path(establishment.resources.first, @teacher)%>">
                      <button class="btn btn-sm btn-primary btn-circle btn-icon">
                        <span class="btn-inner--text">Réserver un créneau ici</span>
                        <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
                      </button>
                    </a>
                  <%else%>
                    <a href="<%=establishment_teachers_path(establishment)%>">
                      <button class="btn btn-sm btn-primary btn-circle btn-icon">
                        <span class="btn-inner--text">Chercher un professeur ici</span>
                        <span class="btn-inner--icon"><i class="fas fa-angle-right"></i></span>
                      </button>
                    </a>
                  <%end%>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <br>
  </div>



