<div class="col-md-4 mb-5">
    <div data-toggle="sticky" data-sticky-offset="100" data-negative-margin=".card-profile-cover">
        <div class="card card-profile border-0 shadow  text-center">
            <div class="card-profile-cover">
                <img alt="Image placeholder" src="../assets/img/prv/team-5-800x400.jpg" class="card-img-top">
            </div>
            <a href="#">
                <img alt="Image placeholder" src="../assets/img/prv/team-5-800x800.jpg" class="card-profile-image avatar shadow">
            </a>
            <div class="card-body">
                <div class="mb-3">
                    <h5 class="mb-0"><%= @establishment.name %></h5>
                    <span class="text-muted"><%= @establishment.description %></span>
                </div>
                <span class="text-muted"><i class="fas fa-map-marker mr-2"></i><%= @establishment.address %></span>
                <div class="pt-4 mt-4 delimiter-top">
                    <div class="btn-group shadow rounded-circle">
                        <button class="btn btn-sm btn-primary btn-circle btn-icon">
                            <span class="btn-inner--icon"><i class="fas fa-user"></i></span>
                            <span class="btn-inner--text">Follow</span>
                        </button>
                        <button class="btn btn-sm btn-dark btn-circle"><i class="fas fa-envelope"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>