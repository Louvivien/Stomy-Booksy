<header class="header-account-page bg-gradient-primary d-flex align-items-end">
    <div class="container">
        <div class="row justify-content-end">
            <div class=" col-lg-8">
                <!-- Salute + Small stats -->
                <div class="row align-items-center mb-4">
                    <div class="col-md-5 mb-4 mb-md-0">
                        <span class="h3 mb-0 text-white d-block"><%= @establishment.name %></span>
                        <span class="text-light"><%= @establishment.address %></span>
                    </div>
                    <div class="col-auto flex-fill">
                        <ul class="list-inline row justify-content-lg-end mb-0">
                            <li class="list-inline-item col-sm-4 col-md-auto px-3 my-2 mx-0">
                                <span class="badge badge-dot text-white">
                            <i class="bg-green"></i>Email
                        </span>
                                <a class="d-sm-block h6 text-white font-weight-bold pl-2" href="#">
                            <%= @establishment.email %>
                            <small class="far fa-angle-up text-success"></small>
                        </a>
                            </li>
                            <li class="list-inline-item col-sm-4 col-md-auto px-3 my-2 mx-0">
                                <span class="badge badge-dot text-white">
                            <i class="bg-orange"></i>Téléphone
                        </span>
                                <a class="d-sm-block h6 text-white font-weight-bold pl-2" href="#">
                            <%= @establishment.phone %>
                            <small class="far fa-angle-up text-warning"></small>
                        </a>
                            </li>
                        </ul>
                    </div>
                </div>



                <% if current_user == @establishment || current_user == @teacher || current_user == @student %>
                <!-- Account navigation --> 
                <div class="d-flex">
                    <div class="btn-group btn-group-nav shadow ml-auto" role="group" aria-label="Basic example">
                        <div class="btn-group" role="group">
                            <button id="btn-group-boards" type="button" class="btn btn-secondary btn-icon" >
                                <span class="btn-inner--icon"><i class="fas fa-chart-line"></i></span>
                                <span class="btn-inner--text d-none d-sm-inline-block">Mon dashboard</span>
                            </button>
                        </div>
                        <div class="btn-group" role="group">
                            <button id="btn-group-settings" type="button" class="btn btn-secondary btn-icon">
                                <span class="btn-inner--icon"><i class="fas fa-sliders-h"></i></span>
                                <span class="btn-inner--text d-none d-sm-inline-block">Modifier mon profil</span>
                            </button>
                        </div>
                    </div>
                </div>
                <% end %>

            </div>
        </div>
    </div>
</header>